<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <table
      style="
        max-width: 80rem;
        min-height: 100vh;
        padding: 2rem;
        margin: 0 auto;
        background-color: #f5f5f5;
      "
    >
      <tr>
        <td align="center">
          <table
            style="background-color: white; border-radius: 5px; padding: 20px"
          >
            <tr>
              <td>
                <div style="text-align: left; font-size: 20px">Sportscape</div>
              </td>
              <td>
                <div style="text-align: right; font-size: 20px">
                  Slots Suggest
                </div>
              </td>
            </tr>
            <tr>
              <td
                colspan="2"
                style="
                  margin: 15px 0;
                  border-top: 1px solid rgba(5, 5, 5, 0.06);
                "
              ></td>
            </tr>
            <tr>
              <td colspan="2" style="padding: 10px 0">
                <div style="text-align: left">
                  <div style="font-size: 16px">Hi <%= user.username %>,</div>
                  <div style="font-size: 16px">
                    New Available slots for you!
                  </div>
                </div>
              </td>
            </tr>
            <tr>
              <td
                colspan="2"
                style="
                  margin: 15px 0;
                  border-top: 1px dashed rgba(5, 5, 5, 0.06);
                "
              ></td>
            </tr>
            <tr>
              <td colspan="2">
                  <% for(let i=0; i < slots.length; i++) { %>
                  <div>
                      <div style="margin: 10px 0;">
                        <span style="font-size: 20px; color: #15c">
                          <%= slots[i].court.sportType.name %>
                        </span>
                        <span style="font-size: 20px; float: right;">
                          Court: <%= slots[i].court.name %>
                        </span>
                      </div>
                      <div style="margin-bottom: 10px;">
                        <span style="font-size: 20px;"
                          >Slots: <%= slots[i].capacity %></span
                        >
                      </div>
                      <div style="margin-bottom: 5px;">
                        <span style="font-size: 16px"
                          >Begin: <%= slots[i].beginAt %></span
                        >
                      </div>
                      <div>
                        <span style="font-size: 16px"
                          >End: <%= slots[i].endAt %></span
                        >
                      </div>
                      <div>
                          <div
                            style="
                              margin: 15px 0;
                              border-top: 1px dashed rgba(5, 5, 5, 0.06);
                            "
                          ></div>
                      </div>
                  </div>
                  <% } %>
              </td>
            </tr>
            <tr>
              <td colspan="2" style="text-align: center">
                <a
                  href="http://localhost:3000"
                  target="_blank"
                  style="
                    display: inline-block;
                    width: 100%;
                    height: 40px;
                    line-height: 40px;
                    cursor: pointer;
                    border-radius: 5px;
                    background-color: #ea1e30;
                    color: white;
                    border: none;
                    outline: none;
                    text-decoration: none;
                    font-size: 16px;
                  "
                >
                  Find More
                </a>
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <div
                  style="padding-top: 20px; text-align: left; font-size: 16px"
                >
                  Cheers,
                </div>
                <div style="text-align: left; font-size: 16px">Sportscape.</div>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
